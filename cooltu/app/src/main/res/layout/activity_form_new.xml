<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/idEt"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:hint="请输入Id" />

                <EditText
                    android:id="@+id/nameEt"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:hint="请输入名字" />

                <EditText
                    android:id="@+id/nicknameEt"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:hint="请输入别名" />

                <EditText
                    android:id="@+id/ageEt"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:hint="请输入年龄" />

                <EditText
                    android:id="@+id/provinceEt"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:hint="请输入省份" />

                <EditText
                    android:id="@+id/cityEt"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:hint="请输入城市" />

                <EditText
                    android:id="@+id/areaEt"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:hint="请输入区域" />

                <LinearLayout
                    android:id="@+id/numLl"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="#ccc"
                        android:gravity="center"
                        android:padding="10dp"
                        android:text="1"
                        android:textColor="#ff0000"
                        android:textSize="14sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:background="#ccc"
                        android:gravity="center"
                        android:padding="10dp"
                        android:text="2"
                        android:textColor="#000"
                        android:textSize="14sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:background="#ccc"
                        android:gravity="center"
                        android:padding="10dp"
                        android:text="3"
                        android:textColor="#000"
                        android:textSize="14sp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/num1Ll"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="#ccc"
                        android:gravity="center"
                        android:padding="10dp"
                        android:text="1"
                        android:textColor="#ff0000"
                        android:textSize="14sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:background="#ccc"
                        android:gravity="center"
                        android:padding="10dp"
                        android:text="2"
                        android:textColor="#000"
                        android:textSize="14sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:background="#ccc"
                        android:gravity="center"
                        android:padding="10dp"
                        android:text="3"
                        android:textColor="#000"
                        android:textSize="14sp" />
                </LinearLayout>

                <TextView
                    android:id="@+id/saveBt1"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="#ccc"
                    android:gravity="center"
                    android:text="保存"
                    android:textColor="#000"
                    android:textSize="14sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/saveBt2"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="#ccc"
                    android:gravity="center"
                    android:text="保存"
                    android:textColor="#000"
                    android:textSize="14sp" />

            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</RelativeLayout>