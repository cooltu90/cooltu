<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/testBt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:background="#ccc"
            android:gravity="center"
            android:padding="10dp"
            android:text="测试"
            android:textColor="#000"
            android:textSize="14sp" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/nameEt"
                    style="@style/form_et"
                    android:hint="请输入姓名" />

                <EditText
                    android:id="@+id/provinceEt"
                    style="@style/form_et"
                    android:hint="请输入省份" />

                <EditText
                    android:id="@+id/cityEt"
                    style="@style/form_et"
                    android:hint="请输入城市" />

                <EditText
                    android:id="@+id/areaEt"
                    style="@style/form_et"
                    android:hint="请输入区县" />

                <EditText
                    android:id="@+id/ymdEt"
                    style="@style/form_et"
                    android:hint="请输入年-月-日" />

                <EditText
                    android:id="@+id/countEt"
                    style="@style/form_et"
                    android:hint="请输入个数" />
            </LinearLayout>
        </ScrollView>
    </LinearLayout>


</RelativeLayout>